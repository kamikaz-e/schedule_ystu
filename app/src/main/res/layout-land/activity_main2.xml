<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ScheduleEditor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppCompatAlertDialogStyle">
        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:hint="Текущая неделя"
            android:drawableEnd="@android:color/transparent"
            android:dropDownWidth="wrap_content"
            app:met_floatingLabel="normal"
            android:textSize="19sp"
            app:met_baseColor="#FFFFFF"
            app:met_textColorHint="#FFFFFF"
            app:met_hideUnderline="true"
            app:met_floatingLabelPadding="1dip"
            app:met_floatingLabelAnimating="true"
            />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/viewpager"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:tabGravity="center"
        app:tabBackground="@drawable/tab_color"
        app:tabIndicatorColor="#FFA500"
        app:tabTextAppearance="@style/TabLayoutTextAppearance"
        app:tabSelectedTextColor="@color/color_secondary_text"
        app:tabTextColor="@color/color_primary_text"
        app:tabMode="fixed"
        app:tabMinWidth="62dp"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:animationCache="true"
        android:fadingEdgeLength="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tab_layout"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout">

    </androidx.viewpager.widget.ViewPager>
    <Switch
        android:id="@+id/switcher_save"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        android:layout_alignParentTop="true"
        android:text=""
        android:drawableLeft="@drawable/ic_save"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:theme="@style/AppCompatAlertDialogStyle"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>