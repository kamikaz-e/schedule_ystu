<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityCallSchedule">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/colorPrimary"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:popupTheme="@style/AppTheme"
      app:title="Расписание звонков">

    <Button
        android:id="@+id/toolbar_but"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginEnd="17dp"
        android:text="" />
  </androidx.appcompat.widget.Toolbar>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewOne"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="getTimeOne"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        app:cardBackgroundColor="#484848">


      <TextView
          android:id="@+id/number_One"
          android:layout_width="45dp"
          android:layout_height="match_parent"
          android:background="#393939"
          android:gravity="center_vertical|center_horizontal|center"
          android:text="1"
          android:textAlignment="center"
          android:textSize="18sp" />

      <EditText
          android:id="@+id/OneTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginStart="73dp"
          android:layout_marginTop="16dp"
          android:background="#484848"
          android:cursorVisible="false"
          android:onClick="getTimeOne"
          android:focusable="false"
          android:hint="Выбрать"
          android:longClickable="false"
          android:textColorHint="#FFFFFF"
          android:textSize="20sp" />

        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="getTimeTwo"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        app:cardBackgroundColor="#484848">


      <TextView
          android:id="@+id/number_Two"
          android:layout_width="45dp"
          android:layout_height="match_parent"
          android:gravity="center_vertical|center_horizontal|center"
          android:text="2"
          android:background="#393939"
          android:textAlignment="center"
          android:textSize="18sp" />

      <EditText
          android:id="@+id/TwoTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginStart="73dp"
          android:layout_marginTop="16dp"
          android:background="#484848"
          android:cursorVisible="false"
          android:onClick="getTimeTwo"
          android:focusable="false"
          android:hint="Выбрать"
          android:longClickable="false"
          android:textColorHint="#FFFFFF"
          android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="getTimeThree"

        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        app:cardBackgroundColor="#484848">


      <TextView
          android:id="@+id/number_Three"
          android:layout_width="45dp"
          android:layout_height="match_parent"
          android:gravity="center_vertical|center_horizontal|center"
          android:text="3"
          android:background="#393939"
          android:textAlignment="center"
          android:textSize="18sp" />

      <EditText
          android:id="@+id/ThreeTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginStart="73dp"
          android:layout_marginTop="16dp"
          android:background="#484848"
          android:cursorVisible="false"
          android:onClick="getTimeThree"
          android:focusable="false"
          android:hint="Выбрать"
          android:longClickable="false"
          android:textColorHint="#FFFFFF"
          android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="getTimeFour"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        app:cardBackgroundColor="#484848">


      <TextView
          android:id="@+id/number_Four"
          android:layout_width="45dp"
          android:layout_height="match_parent"
          android:gravity="center_vertical|center_horizontal|center"
          android:text="4"
          android:background="#393939"
          android:textAlignment="center"
          android:textSize="18sp" />

      <EditText
          android:id="@+id/FourTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginStart="73dp"
          android:layout_marginTop="16dp"
          android:background="#484848"
          android:cursorVisible="false"
          android:onClick="getTimeFour"
          android:focusable="false"
          android:hint="Выбрать"
          android:longClickable="false"
          android:textColorHint="#FFFFFF"
          android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="getTimeFive"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        app:cardBackgroundColor="#484848">


      <TextView
          android:id="@+id/number_Five"
          android:layout_width="45dp"
          android:layout_height="match_parent"
          android:gravity="center_vertical|center_horizontal|center"
          android:text="5"
          android:background="#393939"
          android:textAlignment="center"
          android:textSize="18sp" />

      <EditText
          android:id="@+id/FiveTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginStart="73dp"
          android:layout_marginTop="16dp"
          android:background="#484848"
          android:cursorVisible="false"
          android:onClick="getTimeFive"
          android:focusable="false"
          android:hint="Выбрать"
          android:longClickable="false"
          android:textColorHint="#FFFFFF"
          android:textSize="20sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:onClick="getTimeSix"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        app:cardBackgroundColor="#484848">


      <TextView
          android:id="@+id/number_Six"
          android:layout_width="45dp"
          android:layout_height="match_parent"
          android:gravity="center_vertical|center_horizontal|center"
          android:text="6"
          android:background="#393939"
          android:textAlignment="center"
          android:textSize="18sp" />

      <EditText
          android:id="@+id/SixTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginStart="73dp"
          android:layout_marginTop="16dp"
          android:background="#484848"
          android:cursorVisible="false"
          android:onClick="getTimeSix"
          android:focusable="false"
          android:hint="Выбрать"
          android:longClickable="false"
          android:textColorHint="#FFFFFF"
          android:textSize="20sp" />


    </androidx.cardview.widget.CardView>
  </LinearLayout>


</LinearLayout>