<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:id="@+id/number"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#393939"
                android:gravity="center_vertical|center_horizontal|center"
                android:textAlignment="center"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/number"
                android:text="Время"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/subjectRelLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/subjectHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5sp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:checkable="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:maxLines="1"
                        android:paddingTop="10sp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:translationY="-10dp"
                        android:inputType="textNoSuggestions"
                   />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/typelessonRelLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subjectRelLay"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/typelessonHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5sp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/typelesson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:checkable="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:maxLines="1"
                        android:paddingTop="10sp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:translationY="-10dp"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/audienceRelLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typelessonRelLay"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/audienceHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5sp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/audience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:checkable="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:maxLines="1"
                        android:paddingTop="10sp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:translationY="-10dp"
                        android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>


        <RelativeLayout
            android:id="@+id/educatorRelLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/audienceRelLay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="-5sp"
            android:layout_marginEnd="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/educatorHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5sp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/educator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:checkable="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:maxLines="1"
                    android:paddingTop="10sp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:translationY="-10dp"
                    android:inputType="textNoSuggestions" />
            </com.google.android.material.textfield.TextInputLayout>
          </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>