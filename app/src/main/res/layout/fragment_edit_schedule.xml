<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="55sp"
                    android:layout_marginStart="2sp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rv_tab" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/unevenWeekFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="55sp"
                    android:layout_gravity="bottom|end"
                    android:visibility="invisible"
                    android:layout_alignBottom="@+id/evenWeekFab"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    app:elevation="6sp"
                    app:backgroundTint="#707070"
                    app:pressedTranslationZ="12dp"
                    android:src="@drawable/ic_uneven_week" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/evenWeekFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="65dp"
                    android:layout_gravity="bottom|end"
                    android:visibility="invisible"
                    android:layout_alignBottom="@+id/mainFab"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    app:layout_anchorGravity="bottom|end"
                    app:elevation="6sp"
                    app:backgroundTint="#707070"
                    app:pressedTranslationZ="12dp"
                    android:src="@drawable/ic_even_week" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/mainFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    app:elevation="6sp"
                    android:layout_alignBottom="@+id/viewpager"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:scaleType="center"
                    app:layout_behavior="com.dev2qa.example.material_design.floatingactionbutton.FloatingActionButtonScrollBehavior"
                    app:layout_anchor="@id/rv_tab"
                    app:layout_anchorGravity="bottom|right|end"
                    app:backgroundTint="#707070"
                    app:pressedTranslationZ="12dp"
                    android:src="@drawable/ic_add"/>
        </RelativeLayout>
</FrameLayout>