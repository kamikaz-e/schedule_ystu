<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/current_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#383838"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_currentWeek"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="@dimen/spacing_medium"
                app:srcCompat="@drawable/ic_week" />

            <TextView
                android:id="@+id/text_currentWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_currentWeek"
                android:layout_margin="@dimen/spacing_normal"
                android:text="Дата начала семестра"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:srcCompat="@drawable/ic_arrow_right" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/import_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#383838"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_import"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="@dimen/spacing_medium"
                app:srcCompat="@drawable/ic_import" />

            <TextView
                android:id="@+id/text_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_import"
                android:layout_margin="@dimen/spacing_normal"
                android:text="Выгрузить расписание с сервера"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:srcCompat="@drawable/ic_arrow_right" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/export_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#383838"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_export"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="@dimen/spacing_medium"
                app:srcCompat="@drawable/ic_export" />

            <TextView
                android:id="@+id/text_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_export"
                android:layout_margin="@dimen/spacing_normal"
                android:text="Загрузить расписание на сервер"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:srcCompat="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#FFFFFF" />

</LinearLayout>