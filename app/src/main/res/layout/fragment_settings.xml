<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/current_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_searchAudience"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:layout_margin="@dimen/spacing_medium"
            android:padding="@dimen/spacing_medium"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/text_currentWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_toEndOf="@+id/image_searchAudience"
            android:paddingTop="@dimen/spacing_small"
            android:text="@string/search_free_audience"
            android:textSize="16sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:srcCompat="@drawable/ic_arrow_right" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/import_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_import"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:layout_margin="@dimen/spacing_medium"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_toEndOf="@+id/image_import"
            android:paddingTop="@dimen/spacing_small"
            android:text="@string/settings_import_title"
            android:textSize="16sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:srcCompat="@drawable/ic_arrow_right" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/select_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_theme"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:layout_margin="@dimen/spacing_medium"
            android:padding="@dimen/spacing_medium" />

        <TextView
            android:id="@+id/text_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_toEndOf="@+id/image_theme"
            android:paddingTop="@dimen/spacing_small"
            android:text="@string/settings_change_theme"
            android:textSize="16sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:srcCompat="@drawable/ic_arrow_right" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_about"
            android:layout_width="40sp"
            android:layout_height="45sp"
            android:layout_margin="@dimen/spacing_medium"
            android:padding="@dimen/spacing_medium"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_toEndOf="@+id/image_about"
            android:paddingTop="@dimen/spacing_small"
            android:text="@string/developer"
            android:textSize="16sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:srcCompat="@drawable/ic_arrow_right" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp" />


</LinearLayout>