<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_medium"
    card_view:cardCornerRadius="4dp"
    card_view:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#393939"
                android:gravity="center_vertical|center_horizontal|center"
                android:textAlignment="center"
                android:textSize="17sp"
                tools:text="1" />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2sp"
                android:layout_toEndOf="@+id/number"
                android:textSize="16sp"
                tools:text="Время" />

            <ImageView
                android:id="@+id/menuOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal|center"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:textAppearance="?android:textAppearanceLarge" />
        </RelativeLayout>


        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="#0000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            tools:text="Предмет" />

        <RelativeLayout
            android:id="@+id/audience_educator_relLays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium">

            <TextView
                android:id="@+id/typelesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/audience"
                android:background="#0000"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                tools:text="Лабораторная работа" />

            <TextView
                android:id="@+id/audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="#0000"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                tools:text="Аудитория" />
        </RelativeLayout>

        <TextView
            android:id="@+id/educator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="#0000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="16sp"
            tools:text="Преподаватель" />

    </LinearLayout>

</androidx.cardview.widget.CardView>