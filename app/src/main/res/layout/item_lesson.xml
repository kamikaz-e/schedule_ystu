<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:padding="@dimen/spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="#393939"
                android:gravity="center_vertical|center_horizontal|center"
                android:textAlignment="center"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/number"
                android:text="Время"
                android:textSize="19sp" />


                <TextView
                    android:id="@+id/button_subject"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_alignTop="@+id/time"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="10dp"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="20sp" />


            <TextView
                android:id="@+id/button_educator"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#0000"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="77sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:maxLines="1"
                android:singleLine="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button_subject"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="82dp">

                <TextView
                    android:id="@+id/button_audience"
                    android:layout_width="177dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/button_typelesson"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_toEndOf="@+id/button_audience"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="20sp" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>