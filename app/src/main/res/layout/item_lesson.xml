<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_medium"
    card_view:cardCornerRadius="@dimen/spacing_small"
    card_view:elevation="@dimen/spacing_small">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingEnd="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_medium">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/number"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#393939"
                android:textAlignment="center"
                android:textSize="17sp"
                tools:text="1" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_toEndOf="@+id/number"
                android:textSize="16sp"
                tools:text="Время" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/subject_relLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/subject_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="Предмет">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:checkable="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="textNoSuggestions"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    tools:text="Предмет" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/audience_educator_relLays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/typelesson_relLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/typelesson_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:hint="Тип занятия">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/typelesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:checkable="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:inputType="textNoSuggestions"
                        android:longClickable="false"
                        android:maxLines="1"
                        android:minWidth="75sp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        tools:text="Тип занятия" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/audience_relLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15sp"
                android:layout_toEndOf="@+id/typelesson_relLay">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/audience_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:hint="Аудитория">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/audience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:checkable="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:inputType="textNoSuggestions"
                        android:longClickable="false"
                        android:maxLines="1"
                        android:minWidth="65sp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        tools:text="Аудитория" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/educator_relLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/educator_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="Преподаватель">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/educator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:checkable="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="textNoSuggestions"
                    android:longClickable="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp"
                    tools:text="Преподаватель" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
