<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DarkTheme" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ToolBarDark</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
    </style>

    <style name="ToolBarDark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black10</item>
    </style>


    <style name="LightTheme" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/green</item>
        <item name="toolbarStyle">@style/ToolBarWhite</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
    </style>

    <style name="ToolBarWhite" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    
    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textSize">15sp</item>
    </style>


</resources>
