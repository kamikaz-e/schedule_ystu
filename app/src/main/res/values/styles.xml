<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <attr name="cardStyle" format="reference" />
    <attr name="navBottomStyle" format="reference" />

    <style name="DarkTheme" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/black38</item>
        <item name="colorPrimary">@color/colorAccent</item>

        <item name="android:colorBackground">@color/black38</item>
        <item name="colorAccent">@color/white</item>
        <item name="toolbarStyle">@style/ToolBarDark</item>
        <item name="cardStyle">@style/CardViewStyleDark</item>
        <item name="navBottomStyle">@style/BottomNavigationViewDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
    </style>


    <style name="LightTheme" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorPrimaryDark">@color/black48</item>
        <item name="toolbarStyle">@style/ToolBarLight</item>
        <item name="cardStyle">@style/CardViewStyleLight</item>
        <item name="navBottomStyle">@style/BottomNavigationViewLight</item>
        <item name="android:colorPrimaryDark">@color/black48</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>


    </style>
    <style name="ToolBarDark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black27</item>
    </style>

    <style name="CardViewStyleDark" parent="CardView">
        <item name="cardCornerRadius">@dimen/spacing_medium</item>
        <item name="cardElevation">@dimen/spacing_small</item>
        <item name="cardBackgroundColor">@color/black56</item>
    </style>

    <style name="BottomNavigationViewDark" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/black27</item>
    </style>





    <style name="CardViewStyleLight" parent="CardView">
        <item name="cardCornerRadius">@dimen/spacing_medium</item>
        <item name="cardElevation">@dimen/spacing_small</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="BottomNavigationViewLight" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/holo_green_dark</item>
    </style>

    <style name="ToolBarLight" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
    </style>






    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textSize">15sp</item>
    </style>


</resources>
